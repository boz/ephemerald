{
  "name": "redis-test"
  "size": 1,
  "image": "redis"
  "port": 6379,
  "params": {
    "database": "0",
    "url": "redis://{{.Hostname}}:{{.Port}}/{{.Database}}"
  },
  "actions": {
    "live": {
      "type": "redis.ping"
    },
    "init": {
      "type": "redis.exec"
    },
    "reset": {
      "type": "redis.truncate"
    }
  }
}
